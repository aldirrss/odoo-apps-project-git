<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_task_git_commit_form_view" model="ir.ui.view">
            <field name="name">project.task.git.commit.form</field>
            <field name="model">project.task.git.commit</field>
            <field name="arch" type="xml">
                <form string="Git Commit" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <field name="name" string="ID"/>
                            <field name="commit_hash"/>
                            <label for="author_name" string="Author"/>
                            <div class="o_row">
                                <field name="author_name"/>
                                (<a href="mailto:&lt;field name='author_email'/&gt;" target="_blank">
                                    <field name="author_email" class="oe_inline"/>
                                </a>)
                            </div>
                            <label for="commiter_name" string="Commiter"/>
                            <div class="o_row">
                                <field name="commiter_name"/>
                                (<a href="mailto:&lt;field name='commiter_email'/&gt;" target="_blank">
                                    <field name="commiter_email" class="oe_inline"/>
                                </a>)
                            </div>
                            <field name="branch_ids" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="commit_url" string="URL" widget="url"
                                   placeholder="e. g. https://git.com/your_commit" colspan="2"/>
                            <field name="task_id"/>
                            <field name="message" string="Commit" widget="text" colspan="2"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="project_task_git_commit_tree_view" model="ir.ui.view">
            <field name="name">project.task.git.commit.tree</field>
            <field name="model">project.task.git.commit</field>
            <field name="arch" type="xml">
                <list string="Git Commit" create="false" edit="false">
                    <field name="name"/>
                    <field name="message"/>
                    <field name="date"/>
                    <field name="author_name"/>
                    <field name="branch_ids" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="commit_hash" optional="show"/>
                    <field name="task_id" optional="hide"/>
                    <button name="action_view_external_commit" type="object" string="View" icon="fa-globe"
                            invisible="not commit_url"/>
                </list>
            </field>
        </record>

        <record id="project_task_git_commit_search_view" model="ir.ui.view">
            <field name="name">project.task.git.commit.search</field>
            <field name="model">project.task.git.commit</field>
            <field name="arch" type="xml">
                <search string="Git Commit">
                    <field name="name"/>
                    <field name="message"/>
                    <field name="author_name"/>
                    <field name="date"/>

                    <filter name="filter_date" date="date" string="Date Period" default_period="month"/>
                </search>
            </field>
        </record>
    </data>
</odoo>