<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_github_repository_form_view" model="ir.ui.view">
            <field name="name">project.github.repository.form</field>
            <field name="model">project.github.repository</field>
            <field name="arch" type="xml">
                <form string="Git Repository" create="false" edit="false">
                    <sheet>
                        <group col="4" class="mt16">
                            <field name="project_id" readonly="1"/>
                            <field name="company_id" readonly="1"/>
                            <span/>
                        </group>
                        <separator string="Repository Details" colspan="4"/>
                        <div style="margin: 10px 0;">
                            <field name="repository_info_html" nolabel="1" class="mt8"/>
                            <h4 style="margin-top: 20px;">Connection Details:</h4>
                            <ul>
                                <li><b>Project:</b> <field name="project_id"/></li>
                                <li><b>Connected on:</b> <field name="create_date"/></li>
                                <li><b>Connected by:</b> <field name="create_uid"/></li>
                                <li><b>Status:</b> <field name="is_connected" string="GitHub" widget="git_connection_status"/></li>
                            </ul>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_github_repository_tree_view" model="ir.ui.view">
            <field name="name">project.github.repository.tree</field>
            <field name="model">project.github.repository</field>
            <field name="arch" type="xml">
                <list string="Git Repository" action="action_view_form" type="object"
                      create="false" edit="false" delete="false">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="owner"/>
                    <field name="default_branch_id"/>
                    <field name="private" widget="boolean_toggle"/>
                    <field name="is_connected" string="GitHub" widget="git_connection_status"/>
                </list>
            </field>
        </record>

        <record id="project_github_repository_search_view" model="ir.ui.view">
            <field name="name">project.github.repository.search</field>
            <field name="model">project.github.repository</field>
            <field name="arch" type="xml">
                <search string="Git Repository">
                    <field name="name"/>
                    <field name="project_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Project" name="group_by_project_id" domain="[]"
                                context="{'group_by':'project_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="project_github_repository_act_window" model="ir.actions.act_window">
            <field name="name">Github Repository</field>
            <field name="res_model">project.github.repository</field>
            <field name="view_mode">list</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Git Repository found.
                </p>
                <p>
                    There is no examples click here to add new Git Repository.
                </p>
            </field>
        </record>

        <menuitem name="Github Repository" id="project_github_repository_menu"
                  sequence="24" parent="project.menu_project_config"
                  action="project_github_repository_act_window"
                  groups="lm_project_github.group_git_integration"/>

    </data>
</odoo>