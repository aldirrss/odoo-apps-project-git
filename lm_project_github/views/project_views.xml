<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_form_inherit" model="ir.ui.view">
            <field name="name">project.form.inherit.github</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="object"
                            name="action_view_repository" icon="fa-github"
                            groups="lm_project_github.group_git_integration"
                            invisible="not is_connected_github">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Repository</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//notebook/page[@name='settings']/group[2]" position="inside">
                    <group name="group_github_repository" string="GitHub Integration" col="1"
                           class="row mt16 o_settings_container"
                           groups="lm_project_github.group_git_integration">
                        <div>
                            <setting class="col-lg-12" id="enable_github_setting"
                                     help="Enable GitHub Integration for Projects"
                                     groups="lm_project_github.group_git_integration">
                                <field name="enable_github"/>
                                <span invisible="not is_connected_github" class="text-success o_row" role="alert">
                                    <i class="fa fa-check-circle me-2"/>
                                    Connected to GitHub
                                </span>
                            </setting>
                            <setting class="col-lg-12" id="github_repository_setting" help="GitHub Repository"
                                     invisible="not enable_github" groups="lm_project_github.group_git_integration">
                                <div class="content-group">
                                    <div class="d-flex mt8" invisible="not is_connected_github">
                                        <label for="repository_id" class="fw-bold o_form_label ml16 col-lg-4"
                                               string="Repository"/>
                                        <field name="repository_id" readonly="1" class="col-lg-8"
                                               options="{'no_create': True, 'no_open': True}"/>
                                    </div>
                                    <div class="d-flex mt8" invisible="not is_connected_github">
                                        <label for="github_url" class="fw-bold o_form_label ml16 col-lg-4"
                                               string="URL"/>
                                        <field name="github_url" readonly="1" widget="url" class="col-lg-8"/>
                                    </div>
                                </div>
                                <button name="action_connect_repository" type="object"
                                        string="Connect a Repository" icon="fa-github"
                                        class="btn btn-secondary mt8" invisible="is_connected_github"/>
                                <button name="action_disconnect_repository" type="object"
                                        string="Disconnect a Repository" icon="fa-github"
                                        class="btn btn-secondary mt8" invisible="not is_connected_github"
                                        confirm="Are you sure you want to disconnect the repository?"/>
                            </setting>
                        </div>
                    </group>
                    <group name="group_github_config_repository" string="GitHub Configuration" col="1"
                           class="row mt16 o_settings_container"
                           groups="lm_project_github.group_git_integration" invisible="not is_connected_github">
                        <div>
                            <setting class="col-lg-12" id="github_branch_setting"
                                     help="Default Origin Branch for this Project">
                                <field name="default_branch_id"
                                       options="{'no_create': True, 'no_quick_create': True, 'no_open': True}"
                                       domain="[('repository_id', '=', repository_id)]"/>
                                <div class="content-group" invisible="not branch_ids">
                                    <div class="d-flex mt8">
                                        <label for="branch_ids" class="fw-bold o_form_label"/>
                                        <field name="branch_ids" readonly="1"
                                               widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                </div>
                            </setting>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>