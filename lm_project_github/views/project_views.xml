<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List -->
        <record id="project_project_github_tree_view_inherit" model="ir.ui.view">
            <field name="name">project.project.github.tree</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="repository_id" string="Repository"
                           groups="lm_project_github.group_git_integration"/>
                </field>
            </field>
        </record>

        <!-- Kanban -->
        <record id="project_project_github_kanban_view_inherit" model="ir.ui.view">
            <field name="name">project.project.github.kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <span name="partner_name" position="after">
                    <span name="partner_name" class="text-muted d-flex align-items-baseline"
                          t-if="record.repository_id.value">
                        <span class="fa fa-github me-2" aria-label="Repo" title="Repo"></span>
                        <field class="text-truncate" name="repository_id"
                               groups="lm_project_github.group_git_integration"/>
                    </span>
                </span>
            </field>
        </record>

        <!-- Form -->
        <record id="view_project_form_inherit" model="ir.ui.view">
            <field name="name">project.form.inherit.github</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_sync_branches" type="object" string="Sync Branches"
                            invisible="not is_connected_github or not enable_github"
                            groups="lm_project_github.group_git_integration"/>
                    <button name="action_sync_commits" type="object" string="Manual Sync Commits"
                            invisible="not is_connected_github or not enable_github"
                            groups="lm_project_github.group_git_integration"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" type="object"
                            name="action_view_repository" icon="fa-github"
                            groups="lm_project_github.group_git_integration"
                            invisible="not is_connected_github">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Repository</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" type="object"
                            name="action_view_commits" icon="fa-code-fork"
                            groups="lm_project_github.group_git_integration"
                            invisible="not is_connected_github">
                        <field name="commit_count" widget="statinfo" string="Commits"/>
                    </button>
                </xpath>
                <xpath expr="//notebook/page[@name='settings']/group[2]" position="inside">
                    <group name="group_github_repository" string="GitHub Integration" col="1"
                           class="row mt16 o_settings_container"
                           groups="lm_project_github.group_git_integration">
                        <div>
                            <setting class="col-lg-12" id="enable_github_setting"
                                     help="Enable GitHub Integration for Projects"
                                     groups="lm_project_github.group_git_integration">
                                <field name="enable_github"/>
                                <span invisible="not is_connected_github" class="text-success o_row" role="alert">
                                    <i class="fa fa-check-circle me-2"/>
                                    Connected to GitHub
                                </span>
                            </setting>
                            <setting class="col-lg-12" id="github_repository_setting" help="GitHub Repository"
                                     invisible="not enable_github" groups="lm_project_github.group_git_integration">
                                <div class="content-group">
                                    <div class="d-flex mt8" invisible="not is_connected_github">
                                        <label for="repository_id" class="fw-bold o_form_label ml16 col-lg-4"
                                               string="Repository"/>
                                        <field name="repository_id" readonly="1" class="col-lg-8"
                                               options="{'no_create': True, 'no_open': True}"/>
                                    </div>
                                    <div class="d-flex mt8" invisible="not is_connected_github">
                                        <label for="github_url" class="fw-bold o_form_label ml16 col-lg-4"
                                               string="URL"/>
                                        <field name="github_url" readonly="1" widget="url" class="col-lg-8"/>
                                    </div>
                                </div>
                                <button name="action_connect_repository" type="object"
                                        string="Connect a Repository" icon="fa-github"
                                        class="btn btn-secondary" invisible="is_connected_github"/>
                                <button name="action_disconnect_repository" type="object"
                                        string="Disconnect a Repository" icon="fa-github"
                                        class="btn btn-secondary mt8" invisible="not is_connected_github"
                                        confirm="Are you sure you want to disconnect the repository?"/>
                            </setting>
                        </div>
                    </group>
                    <group name="group_github_config_repository" string="GitHub Configuration" col="1"
                           class="row mt16 o_settings_container"
                           groups="lm_project_github.group_git_integration" invisible="not is_connected_github">
                        <div>
                            <setting class="col-lg-12" id="github_webhook_setting"
                                     help="Manage GitHub Webhook for this Repository">
                                <field name="webhook_id" options="{'no_create': True, 'no_quick_create': True}"
                                       invisible="not webhook_id"/>
                                <button name="action_create_webhook" type="object"
                                        string="Create Webhook" icon="fa-github"
                                        class="btn btn-secondary"/>
                            </setting>
                            <setting class="col-lg-12 mt8" id="commit_prefix_setting"
                                     help="Prefix to identify commits related to this project">
                                <field name="commit_prefix"/>
                            </setting>
                            <setting class="col-lg-12 mt8" id="github_branch_setting"
                                     help="Default Origin Branch for this Project">
                                <field name="default_branch_id"
                                       options="{'no_create': True, 'no_quick_create': True, 'no_open': True}"
                                       domain="[('repository_id', '=', repository_id)]"/>
                                <div class="content-group" invisible="not branch_ids">
                                    <div class="d-flex mt8">
                                        <label for="branch_ids" class="fw-bold o_form_label"/>
                                        <field name="branch_ids" readonly="1" class="col-12 w-100"
                                               widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                </div>
                            </setting>
                            <setting class="col-lg-12" id="automation_workflow_setting">
                                <field name="automation_workflow"/>
                                <span colspan="2" class="oe_grey oe_edit_only" invisible="not automation_workflow">
                                    <ul>
                                        Automation Workflow Rules:
                                        <li>
                                            If a PR is merged on GitHub, the Odoo task status will automatically move to 'Done'.
                                        </li>
                                        <li>
                                            If a new commit occurs, the Odoo task status will move to 'In Progress.
                                        </li>
                                    </ul>
                                </span>
                            </setting>
                            <setting class="col-lg-12" id="auto_create_issues_setting">
                                <field name="auto_create_issues"/>
                            </setting>
                            <setting class="col-lg-12" id="auto_update_issues_setting">
                                <field name="auto_update_issues"/>
                            </setting>
<!--                            <setting class="col-lg-12" id="auto_update_issues_setting"-->
<!--                                     help="Create a new branch in the repository when a new task/issues is created"-->
<!--                                     invisible="not auto_create_issues">-->
<!--                                <field name="create_issues_branch"/>-->
<!--                            </setting>-->
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>