<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_form_inherit_git" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit.git</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@name='project']" position="inside">
                    <block title="Git Integration" id="git_integration_block">
                        <setting id="group_git_integration"
                                 help="Enable Git Integration for Projects or Tasks">
                            <field name="group_git_integration"/>
                            <div class="content-group" invisible="not group_git_integration">
                                <div class="row mt8">
                                    <label for="github_instance_url" class="col-lg-5 o_light_label"/>
                                    <field name="github_instance_url" placeholder="https://api.github.com"/>
                                </div>
                            </div>
                        </setting>
                        <setting id="enable_project_git" invisible="not group_git_integration"
                                 help="Enable Git Integration for Projects">
                            <field name="enable_project_git"/>
                        </setting>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>