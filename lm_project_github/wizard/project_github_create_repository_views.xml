<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_github_create_repository_form_view" model="ir.ui.view">
            <field name="name">project.github.create.repository.form</field>
            <field name="model">project.github.create.repository</field>
            <field name="arch" type="xml">
                <form string="Create Repository">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="commit_prefix"/>
                            <field name="private"/>
                            <field name="description"/>
                        </group>
                        <footer>
                            <button string="Create" type="object" name="action_post_repository"
                                    class="oe_highlight"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>