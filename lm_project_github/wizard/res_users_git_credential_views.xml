<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_users_git_credential_form_view" model="ir.ui.view">
            <field name="name">res.users.git.credential.form</field>
            <field name="model">res.users.git.credential</field>
            <field name="arch" type="xml">
                <form string="GitLab Credentials">
                    <group>
                        <field name="user_id" invisible="1"/>
                        <field name="git_username"/>
                        <field name="git_token" password="True"/>
                    </group>
                    <footer>
                        <button string="Save" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>